     string stepTime = (ActionStopTime - ActionStartTime).TotalSeconds.ToString();
     string stepDetails;
                 
          stepDetails = $"<pre>" +
                              $"<b>Control</b>: {Control}<br>" +
                              $"<b>Type</b>: {ControlType}<br>" +
