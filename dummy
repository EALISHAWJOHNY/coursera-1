<script>
    // Initialize the stepper
    var stepper = new Stepper(document.querySelector('#stepper'), {
        linear: false, // Change to true if you want to enforce step order
        animation: true
    });
    
    // Automatically move to the next step when "Next" is clicked
    function goToNextStep() {
        stepper.next();
    }

    // Attach event listeners to the "Next" buttons
    document.querySelectorAll('.btn-primary').forEach(button => {
        button.addEventListener('click', goToNextStep);
    });
</script>
{% endblock %}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Initialize the stepper
        var stepperElement = document.querySelector('#stepper');
        var stepper = new Stepper(stepperElement, {
            linear: true, // Set to true for sequential step navigation
            animation: true
        });

        // Add event listener to all Next buttons to trigger the next step
        document.querySelectorAll('.btn-next').forEach(button => {
            button.addEventListener('click', function() {
                stepper.next();
            });
        });

        // Optional: Add a listener for Previous buttons if needed
        document.querySelectorAll('.btn-prev').forEach(button => {
            button.addEventListener('click', function() {
                stepper.previous();
            });
        });
    });
</script>
